{% comment %}
  Fit Finder Section
  Help customers find the right racket
{% endcomment %}

<section class="py-24 md:py-32 bg-background">
  <div class="container mx-auto px-4 md:px-8">
    <h2 class="font-display text-4xl md:text-5xl text-center text-foreground mb-8">
      {{ section.settings.heading | default: "Find Your Perfect Fit" }}
    </h2>
    <p class="font-body text-center text-muted-foreground max-w-2xl mx-auto">
      {{ section.settings.description | default: "Answer a few questions to discover your ideal racket" }}
    </p>
  </div>
</section>

{% schema %}
{
  "name": "PR Fit Finder",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Find Your Perfect Fit"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description"
    }
  ]
}
{% endschema %}
