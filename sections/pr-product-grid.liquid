{% comment %}
  Padel Ready Product Grid Section
  Displays featured products
{% endcomment %}

<section id="products" class="relative py-24 lg:py-32 bg-[#fefaf3] pr-product-grid" data-nav-theme="light">
  <!-- Subtle gold divider line -->
  <div class="absolute top-0 left-0 right-0 h-px bg-gradient-to-r from-transparent via-primary/20 to-transparent"></div>
  
  <!-- Container with max-width and extra padding -->
  <div class="mx-auto px-6 md:px-12" style="max-width: 1200px;">
    <!-- Section Title -->
    <div class="text-center mb-10 md:mb-10">
      <h2 class="font-display text-4xl md:text-5xl lg:text-6xl text-foreground inline-block relative">
        {{ section.settings.heading | default: "SHOP OUR BEST SELLERS" }}
        <!-- Thin gold underline - 60px width, 2px height -->
        <div class="absolute -bottom-3 left-1/2 -translate-x-1/2 w-[60px] h-[2px] bg-primary"></div>
      </h2>
    </div>

    <!-- Product Grid - 2 cols mobile, 3 cols tablet, 4 cols desktop -->
    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-10 md:gap-14">
      {% for product in collections[section.settings.collection].products limit: section.settings.products_to_show %}
        {% render 'pr-product-card', product: product, index: forloop.index0 %}
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "PR Product Grid",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "SHOP OUR BEST SELLERS"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "min": 4,
      "max": 12,
      "step": 2,
      "default": 8,
      "label": "Number of products to show"
    }
  ],
  "presets": [
    {
      "name": "PR Product Grid"
    }
  ]
}
{% endschema %}
