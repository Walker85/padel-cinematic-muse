{% comment %}
  Padel Ready Hero Section
  Cinematic hero for homepage
{% endcomment %}

<section class="relative min-h-screen flex items-center justify-center overflow-hidden pr-hero" data-nav-theme="dark">
  <!-- Parallax Background -->
  <div class="absolute inset-0 pr-parallax-bg">
    <div class="absolute inset-0 bg-gradient-to-b from-black/40 via-black/20 to-background z-10"></div>
    <img 
      src="{{ section.settings.hero_image | default: 'hero-padel-court.jpg' | file_img_url: '2048x' }}" 
      alt="{{ section.settings.hero_image.alt | default: 'Luxury padel court at sunset' }}" 
      class="w-full h-full object-cover"
    />
  </div>
  
  <!-- Content -->
  <div class="container mx-auto px-4 lg:px-8 py-32 relative z-20">
    <div class="max-w-4xl mx-auto text-center space-y-8">
      <h1 class="font-display text-6xl md:text-8xl lg:text-9xl text-white pr-hero-title" style="letter-spacing: 0.04em; text-shadow: 0 4px 20px rgba(0,0,0,0.3);">
        {{ section.settings.heading | default: "PADEL, PERFECTED." }}
      </h1>
      
      <p class="text-xl md:text-2xl text-primary max-w-2xl mx-auto font-body pr-hero-subtitle" style="letter-spacing: 0.04em; text-shadow: 0 2px 10px rgba(0,0,0,0.3);">
        {{ section.settings.subheading | default: "Precision. Purpose. Padel Ready." }}
      </p>
      
      <div class="flex flex-col sm:flex-row gap-4 justify-center pt-8 pr-hero-cta">
        <a href="#products" class="bg-primary text-primary-foreground hover:bg-primary/90 font-display tracking-wide hover-glow border-none px-8 py-4 rounded-lg transition-all duration-300">
          {{ section.settings.cta_text | default: "EXPLORE COLLECTION" }}
        </a>
      </div>
    </div>
  </div>
  
  <!-- Scroll Indicator -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce z-20">
    <div class="w-6 h-10 border-2 border-white/40 rounded-full flex items-start justify-center p-2">
      <div class="w-1 h-2 bg-white/60 rounded-full"></div>
    </div>
  </div>
</section>

<style>
  .pr-hero .pr-parallax-bg {
    animation: pr-fade-in 1.5s ease-out;
  }

  .pr-hero-title {
    animation: pr-fade-up 0.8s ease-out 0.3s both;
  }

  .pr-hero-subtitle {
    animation: pr-fade-up 0.8s ease-out 0.5s both;
  }

  .pr-hero-cta {
    animation: pr-fade-up 0.8s ease-out 0.7s both;
  }

  @keyframes pr-fade-in {
    from {
      opacity: 0;
      transform: scale(1.1);
    }
    to {
      opacity: 1;
      transform: scale(1);
    }
  }

  @keyframes pr-fade-up {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>

{% schema %}
{
  "name": "PR Hero",
  "settings": [
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Hero Background Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "PADEL, PERFECTED."
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Precision. Purpose. Padel Ready."
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "CTA Button Text",
      "default": "EXPLORE COLLECTION"
    }
  ],
  "presets": [
    {
      "name": "PR Hero"
    }
  ]
}
{% endschema %}
