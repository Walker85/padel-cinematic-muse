{% comment %}
  Testimonials Section
  Customer testimonials
{% endcomment %}

<section class="py-24 md:py-32 bg-background">
  <div class="container mx-auto px-4 md:px-8">
    <h2 class="font-display text-4xl md:text-5xl text-center text-foreground mb-16">
      {{ section.settings.heading | default: "What Players Say" }}
    </h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-6xl mx-auto">
      {% for block in section.blocks %}
        <div class="text-center">
          <p class="font-body text-muted-foreground mb-4">&ldquo;{{ block.settings.quote }}&rdquo;</p>
          <p class="font-display font-bold text-foreground">{{ block.settings.author }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "PR Testimonials",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "What Players Say"
    }
  ],
  "blocks": [
    {
      "type": "testimonial",
      "name": "Testimonial",
      "settings": [
        {
          "type": "textarea",
          "id": "quote",
          "label": "Quote",
          "default": "Best racket I've ever used!"
        },
        {
          "type": "text",
          "id": "author",
          "label": "Author",
          "default": "John Doe"
        }
      ]
    }
  ]
}
{% endschema %}
