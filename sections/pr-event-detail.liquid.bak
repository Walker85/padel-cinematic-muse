{% comment %}
  Padel Ready Event Detail Section
  Renders full event page content from metafields
{% endcomment %}

{% stylesheet %}
  {{ 'pr-theme.css' | asset_url | stylesheet_tag }}
{% endstylesheet %}

{% assign event_title = page.metafields.custom.event_title | default: page.title %}
{% assign event_date = page.metafields.custom.event_date %}
{% assign event_location = page.metafields.custom.event_location %}
{% assign event_type = page.metafields.custom.event_type | default: 'Event' %}
{% assign event_description = page.metafields.custom.event_description %}
{% assign event_image = page.metafields.custom.event_image %}
{% assign event_status = page.metafields.custom.event_status | default: 'upcoming' %}
{% assign event_register_url = page.metafields.custom.event_register_url %}
{% assign event_featured = page.metafields.custom.event_featured %}

<section class="pr-event-detail">
  <!-- Hero Section -->
  <div class="pr-event-hero">
    {% if event_image %}
      <img src="{{ event_image | img_url: '1920x' }}" alt="{{ event_title }}" class="pr-hero-image">
    {% else %}
      <img src="{{ 'placeholder.svg' | asset_url }}" alt="{{ event_title }}" class="pr-hero-image">
    {% endif %}
    
    <div class="pr-hero-overlay"></div>
    
    <div class="pr-hero-content">
      <div class="pr-hero-back">
        <a href="/pages/events" class="pr-back-button">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M19 12H5M12 19l-7-7 7-7"/>
          </svg>
          Back to Events
        </a>
      </div>
      
      <div class="pr-hero-text">
        <span class="pr-event-type-badge">{{ event_type }}</span>
        <h1 class="pr-event-title">{{ event_title }}</h1>
        <div class="pr-event-meta">
          <div class="pr-meta-item">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <rect x="3" y="4" width="18" height="18" rx="2" ry="2"/>
              <line x1="16" y1="2" x2="16" y2="6"/>
              <line x1="8" y1="2" x2="8" y2="6"/>
              <line x1="3" y1="10" x2="21" y2="10"/>
            </svg>
            <time>{{ event_date }}</time>
          </div>
          <div class="pr-meta-item">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/>
              <circle cx="12" cy="10" r="3"/>
            </svg>
            <span>{{ event_location }}</span>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Event Content -->
  <div class="pr-event-content">
    <div class="pr-event-container">
      <!-- Status Badges -->
      <div class="pr-event-badges-wrapper">
        <span class="pr-status-badge pr-status-{{ event_status }}">
          {% if event_status == 'upcoming' %}Upcoming Event{% else %}Past Event{% endif %}
        </span>
        {% if event_featured %}
          <span class="pr-status-badge pr-featured-badge">Featured</span>
        {% endif %}
      </div>

      <!-- Description -->
      <div class="pr-event-description">
        {{ event_description | newline_to_br }}
      </div>

      <!-- CTA Section -->
      {% if event_status == 'upcoming' and event_register_url != blank %}
        <div class="pr-event-cta">
          <h2 class="pr-cta-title">Ready to Join?</h2>
          <p class="pr-cta-text">Secure your spot at this exclusive event. Limited availability.</p>
          <a href="{{ event_register_url }}" target="_blank" rel="noopener noreferrer" class="pr-register-button">
            Register Now
          </a>
        </div>
      {% endif %}

      {% if event_status == 'past' %}
        <div class="pr-event-cta">
          <p class="pr-cta-text">This event has concluded. Browse our upcoming events to find your next padel experience.</p>
          <a href="/pages/events" class="pr-browse-button">
            View Upcoming Events
          </a>
        </div>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "PR Event Detail",
  "settings": []
}
{% endschema %}
    position: relative;
    height: 80vh;
    overflow: hidden;
  }

  .pr-hero-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    animation: pr-hero-zoom 1.5s ease-out;
  }

  @keyframes pr-hero-zoom {
    from {
      transform: scale(1.1);
      opacity: 0;
    }
    to {
      transform: scale(1);
      opacity: 1;
    }
  }

  .pr-hero-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(180deg, rgba(0,0,0,0.7) 0%, rgba(0,0,0,0.4) 50%, rgba(254,250,243,0.2) 100%);
  }

  .pr-hero-content {
    position: absolute;
    inset: 0;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    padding: 2rem;
  }

  .pr-back-button {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    border: 1px solid rgba(255,255,255,0.5);
    border-radius: 0.5rem;
    color: white;
    text-decoration: none;
    backdrop-filter: blur(8px);
    transition: all 0.3s ease;
  }

  .pr-back-button:hover {
    background-color: rgba(255,255,255,0.1);
    border-color: white;
  }

  .pr-hero-text {
    animation: pr-fade-up 0.8s ease-out 0.5s both;
  }

  @keyframes pr-fade-up {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .pr-event-type-badge {
    display: inline-block;
    padding: 0.375rem 1rem;
    background-color: #D6C2A8;
    color: #1A1A1A;
    border-radius: 9999px;
    font-size: 0.875rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    box-shadow: 0 4px 6px rgba(0,0,0,0.1);
    margin-bottom: 1rem;
  }

  .pr-event-title {
    font-family: 'Mollen', serif;
    font-size: clamp(2rem, 5vw, 4rem);
    line-height: 1.1;
    color: #D6C2A8;
    margin: 0 0 1.5rem 0;
    max-width: 60rem;
  }

  .pr-event-meta {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    color: rgba(255,255,255,0.9);
  }

  .pr-meta-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .pr-meta-item svg {
    color: #D6C2A8;
  }

  @media (min-width: 640px) {
    .pr-event-meta {
      flex-direction: row;
      gap: 2rem;
    }
  }

  /* Event Content */
  .pr-event-content {
    padding: 5rem 0 8rem;
  }

  .pr-event-container {
    max-width: 56rem;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .pr-event-badges-wrapper {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 2rem;
    flex-wrap: wrap;
  }

  .pr-status-badge {
    padding: 0.5rem 1rem;
    border-radius: 9999px;
    font-size: 0.875rem;
    font-weight: 500;
  }

  .pr-status-upcoming {
    background-color: #D6C2A8;
    color: #1A1A1A;
  }

  .pr-status-past {
    background-color: #e5e7eb;
    color: #6b7280;
  }

  .pr-featured-badge {
    background-color: #D6C2A8;
    color: #1A1A1A;
  }

  .pr-event-description {
    font-size: 1.125rem;
    line-height: 1.8;
    color: rgba(0,0,0,0.9);
    margin-bottom: 4rem;
  }

  .pr-event-description p {
    margin-bottom: 1.5rem;
  }

  /* CTA Section */
  .pr-event-cta {
    text-align: center;
    padding: 3rem 0;
    border-top: 1px solid #e5e7eb;
  }

  .pr-cta-title {
    font-family: 'Mollen', serif;
    font-size: clamp(1.875rem, 3vw, 2.25rem);
    margin-bottom: 1rem;
    color: #000000;
  }

  .pr-cta-text {
    font-size: 1.125rem;
    color: #6b7280;
    margin-bottom: 2rem;
    max-width: 42rem;
    margin-left: auto;
    margin-right: auto;
  }

  .pr-register-button {
    display: inline-block;
    padding: 0.75rem 3rem;
    background-color: #D6C2A8;
    color: #1A1A1A;
    font-weight: 500;
    font-size: 1.125rem;
    border-radius: 0.5rem;
    text-decoration: none;
    box-shadow: 0 10px 15px -3px rgba(0,0,0,0.1);
    transition: all 0.3s ease;
  }

  .pr-register-button:hover {
    background-color: rgba(214, 194, 168, 0.9);
    transform: translateY(-2px);
    box-shadow: 0 20px 25px -5px rgba(0,0,0,0.1);
  }

  .pr-browse-button {
    display: inline-block;
    padding: 0.75rem 3rem;
    background-color: transparent;
    color: #D6C2A8;
    font-weight: 500;
    font-size: 1.125rem;
    border: 1px solid #D6C2A8;
    border-radius: 0.5rem;
    text-decoration: none;
    transition: all 0.3s ease;
  }

