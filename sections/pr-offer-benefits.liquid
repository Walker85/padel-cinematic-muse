{% comment %} PR Offer Benefits Section {% endcomment %}
<section class="pr-offer-section">
  <div class="pr-offer-container">
    <div class="pr-offer-header">
      <h2 class="pr-offer-title">Why Padel Ready?</h2>
      <p class="pr-offer-subtitle">Experience the perfect fusion of luxury design and uncompromising performance.</p>
    </div>
    
    <div class="pr-benefits-grid">
      {% for block in section.blocks %}
        <div class="pr-benefit-card">
          <div class="pr-benefit-icon-wrapper">
            <span class="pr-benefit-icon">{{ block.settings.icon }}</span>
          </div>
          <h3 class="pr-benefit-title">{{ block.settings.title }}</h3>
          <p class="pr-benefit-text">{{ block.settings.description }}</p>
        </div>
      {% endfor %}
    </div>
    
    <div class="pr-cta-box">
      <h3 class="pr-cta-title">Ready to Elevate Your Game?</h3>
      <p class="pr-cta-text">Join the Padel Ready community and experience the difference that premium craftsmanship makes.</p>
      <div class="pr-cta-buttons">
        <a href="#products" class="pr-cta-button-primary">Shop Collection</a>
        <a href="/about" class="pr-cta-button-secondary">Learn More</a>
      </div>
    </div>
  </div>
</section>

<style>
.pr-offer-section { padding: 6rem 0 8rem; background: #FEFAF3; }
.pr-offer-container { max-width: 1200px; margin: 0 auto; padding: 0 2rem; }
.pr-offer-header { text-align: center; margin-bottom: 4rem; }
.pr-offer-title { font-family: 'Mollen', serif; font-size: 2.5rem; font-weight: 800; text-transform: uppercase; color: #000; margin-bottom: 1rem; }
.pr-offer-subtitle { font-family: 'SA Triumph', serif; font-size: 1.125rem; color: #6b7280; max-width: 600px; margin: 0 auto; }
.pr-benefits-grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 2rem; margin-bottom: 4rem; }
.pr-benefit-card { background: white; border-radius: 0.75rem; padding: 2rem; border: 1px solid #e5e7eb; transition: all 0.3s; }
.pr-benefit-card:hover { border-color: #D6C2A8; box-shadow: 0 10px 25px rgba(0,0,0,0.08); }
.pr-benefit-icon-wrapper { width: 4rem; height: 4rem; background: rgba(214,194,168,0.1); border-radius: 50%; display: flex; align-items: center; justify-content: center; margin-bottom: 1.5rem; transition: all 0.3s; }
.pr-benefit-card:hover .pr-benefit-icon-wrapper { background: #D6C2A8; transform: scale(1.1); }
.pr-benefit-icon { font-size: 2rem; color: #D6C2A8; }
.pr-benefit-card:hover .pr-benefit-icon { color: #000; }
.pr-benefit-title { font-family: 'Mollen', serif; font-size: 1.25rem; font-weight: 800; color: #000; margin-bottom: 0.75rem; transition: color 0.3s; }
.pr-benefit-card:hover .pr-benefit-title { color: #D6C2A8; }
.pr-benefit-text { font-family: 'SA Triumph', serif; font-size: 1rem; color: #6b7280; line-height: 1.6; }
.pr-cta-box { background: rgba(0,0,0,0.03); border-radius: 1rem; padding: 3rem; text-align: center; }
.pr-cta-title { font-family: 'Mollen', serif; font-size: 2rem; font-weight: 800; text-transform: uppercase; color: #000; margin-bottom: 1rem; }
.pr-cta-text { font-family: 'SA Triumph', serif; font-size: 1.125rem; color: #6b7280; max-width: 600px; margin: 0 auto 2rem; }
.pr-cta-buttons { display: flex; flex-wrap: wrap; gap: 1rem; justify-content: center; }
.pr-cta-button-primary { padding: 1rem 2rem; background: #D6C2A8; color: #000; font-family: 'Mollen', serif; text-transform: uppercase; font-size: 0.875rem; letter-spacing: 0.05em; transition: all 0.3s; }
.pr-cta-button-primary:hover { background: rgba(214,194,168,0.9); box-shadow: 0 10px 25px rgba(0,0,0,0.1); }
.pr-cta-button-secondary { padding: 1rem 2rem; border: 2px solid #000; color: #000; font-family: 'Mollen', serif; text-transform: uppercase; font-size: 0.875rem; letter-spacing: 0.05em; transition: all 0.3s; }
.pr-cta-button-secondary:hover { background: #000; color: #FEFAF3; }
</style>

{% schema %}
{
  "name": "PR Offer Benefits",
  "blocks": [
    {
      "type": "benefit",
      "name": "Benefit",
      "settings": [
        {"type": "text", "id": "icon", "label": "Icon (emoji)", "default": "üèÜ"},
        {"type": "text", "id": "title", "label": "Title", "default": "Premium Craftsmanship"},
        {"type": "textarea", "id": "description", "label": "Description"}
      ]
    }
  ],
  "presets": [{"name": "PR Offer Benefits"}]
}
{% endschema %}
