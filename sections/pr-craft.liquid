{% comment %}
  Craft Section
  Showcasing craftsmanship
{% endcomment %}

<section class="py-24 md:py-32 bg-background">
  <div class="container mx-auto px-4 md:px-8">
    <div class="max-w-4xl mx-auto text-center">
      <h2 class="font-display text-4xl md:text-5xl text-foreground mb-8">
        {{ section.settings.heading | default: "Crafted for Excellence" }}
      </h2>
      <p class="font-body text-lg text-muted-foreground">
        {{ section.settings.description | default: "Every racket is meticulously crafted with premium materials and attention to detail." }}
      </p>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "PR Craft",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description"
    }
  ]
}
{% endschema %}
