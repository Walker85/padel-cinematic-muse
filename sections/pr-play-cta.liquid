{% comment %} PR Play With Us CTA Section {% endcomment %}
<section class="pr-play-section">
  <div class="pr-play-overlay"></div>
  <div class="pr-play-container">
    <h2 class="pr-play-title">Play With Us</h2>
    <p class="pr-play-text">Partner with us to bring premium padel experiences worldwide</p>
    <a href="/contact" class="pr-play-button">Get in Touch</a>
  </div>
</section>

<style>
.pr-play-section { position: relative; padding: 10rem 0; background: #000; overflow: hidden; }
.pr-play-overlay { position: absolute; inset: 0; background: linear-gradient(180deg, rgba(214,194,168,0.05), transparent, transparent); pointer-events: none; }
.pr-play-container { position: relative; z-index: 10; max-width: 768px; margin: 0 auto; padding: 0 2rem; text-align: center; }
.pr-play-title { font-family: 'Mollen', serif; font-size: 3rem; font-weight: 800; color: #FEFAF3; margin-bottom: 1.5rem; line-height: 1.1; }
.pr-play-text { font-family: 'SA Triumph', serif; font-size: 1.125rem; color: rgba(254,250,243,0.8); max-width: 600px; margin: 0 auto 2rem; line-height: 1.6; }
.pr-play-button { display: inline-block; padding: 1rem 3rem; border: 1px solid #D6C2A8; color: #D6C2A8; font-family: 'Mollen', serif; text-transform: uppercase; font-size: 0.875rem; letter-spacing: 0.05em; transition: all 0.3s; }
.pr-play-button:hover { background: #D6C2A8; color: #000; box-shadow: 0 0 30px rgba(214,194,168,0.4); }
</style>

{% schema %}
{
  "name": "PR Play CTA"
}
{% endschema %}
