{% comment %}
  Padel Ready Event Card Snippet
  Individual event card with hover effects
{% endcomment %}

<article
  class="pr-event-card group bg-white rounded-lg overflow-hidden shadow-sm"
  data-event-status="{{ status }}"
  style="{% if status == 'past' %}display: none;{% endif %}"
>
  <!-- Image -->
  <div class="aspect-video overflow-hidden">
    <img
      src="{{ image | img_url: '800x' }}"
      alt="{{ title }}"
      class="w-full h-full object-cover pr-card-image"
      loading="lazy"
    />
  </div>

  <!-- Content -->
  <div class="p-6">
    <div class="flex items-center justify-between mb-3">
      <span class="pr-event-badge pr-badge-{{ type | downcase }}">
        {{ type }}
      </span>
    </div>

    <h3 class="pr-card-title font-display text-2xl mb-3">
      {{ title }}
    </h3>

    <div class="font-body text-sm text-gray-600 mb-2 uppercase tracking-wider">
      <time datetime="{{ date }}">{{ date }}</time>
    </div>

    <p class="font-body text-sm text-gray-600 mb-4 uppercase tracking-wider">
      {{ location }}
    </p>

    <p class="text-gray-700 mb-6 pr-card-description">
      {{ description }}
    </p>

    <button class="pr-card-btn w-full">
      {% if status == 'upcoming' %}
        Register
      {% else %}
        View Recap
      {% endif %}
    </button>
  </div>
</article>

<style>
  .pr-event-card {
    transition: all 0.3s ease;
  }

  .pr-event-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
  }

  .pr-card-image {
    transition: transform 0.5s ease;
  }

  .pr-event-card:hover .pr-card-image {
    transform: scale(1.05);
  }

  .pr-card-title {
    color: #000000;
    transition: color 0.3s ease;
  }

  .pr-event-card:hover .pr-card-title {
    color: #D6C2A8;
  }

  .pr-card-description {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .pr-event-badge {
    padding: 0.25rem 0.75rem;
    border-radius: 0.375rem;
    font-size: 0.875rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .pr-badge-tournament {
    background-color: #D6C2A8;
    color: #000000;
  }

  .pr-badge-training {
    background-color: #000000;
    color: #fefaf3;
  }

  .pr-badge-social {
    background-color: #fefaf3;
    color: #000000;
    border: 1px solid #D6C2A8;
  }

  .pr-card-btn {
    padding: 0.5rem 1rem;
    border-radius: 0.5rem;
    font-weight: 500;
    transition: all 0.3s ease;
    background-color: transparent;
    border: 1px solid #D6C2A8;
    color: #D6C2A8;
    cursor: pointer;
  }

  .pr-card-btn:hover {
    background-color: #D6C2A8;
    color: #000000;
  }
</style>
