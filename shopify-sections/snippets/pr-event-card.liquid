{% comment %}
  Padel Ready Event Card Snippet
  Individual event card with hover effects and metaobject support
{% endcomment %}

{% assign card_url = '' %}
{% if handle %}
  {% assign card_url = '/pages/events/' | append: handle %}
{% endif %}

{% if card_url != blank %}
<a href="{{ card_url }}" class="pr-event-card-link">
{% endif %}

<article
  class="pr-event-card group bg-white rounded-lg overflow-hidden shadow-sm"
  data-event-status="{{ status }}"
  style="{% if status == 'past' %}display: none;{% endif %}"
>
  <!-- Image -->
  <div class="aspect-video overflow-hidden">
    {% if image.url %}
      <img
        src="{{ image.url }}"
        alt="{{ title }}"
        class="w-full h-full object-cover pr-card-image"
        loading="lazy"
      />
    {% elsif image %}
      <img
        src="{{ image | img_url: '800x' }}"
        alt="{{ title }}"
        class="w-full h-full object-cover pr-card-image"
        loading="lazy"
      />
    {% else %}
      <img
        src="{{ 'placeholder.svg' | asset_url }}"
        alt="{{ title }}"
        class="w-full h-full object-cover pr-card-image"
        loading="lazy"
      />
    {% endif %}
  </div>

  <!-- Content -->
  <div class="p-6" style="display: flex; flex-direction: column; justify-content: space-between; flex-grow: 1;">
    <div>
      <div class="flex items-center gap-2 mb-3" style="flex-wrap: wrap;">
        <span class="pr-event-badge pr-badge-{{ type | downcase }}">
          {{ type }}
        </span>
        {% if featured %}
          <span class="pr-event-badge pr-badge-featured">Featured</span>
        {% endif %}
      </div>

    <h3 class="pr-card-title font-display text-2xl mb-3">
      {{ title }}
    </h3>

    <div class="font-body text-sm text-gray-600 mb-2 uppercase tracking-wider">
      <time datetime="{{ date }}">{{ date }}</time>
    </div>

    <p class="font-body text-sm text-gray-600 mb-4 uppercase tracking-wider">
      {{ location }}
    </p>

      <p class="text-gray-700 mb-6 pr-card-description">
        {{ description }}
      </p>
    </div>

    <div>
      {% if status == 'upcoming' and register_url != blank %}
        <a href="{{ register_url }}" target="_blank" rel="noopener noreferrer" class="pr-card-btn w-full text-center" onclick="event.stopPropagation();">
          Register
        </a>
      {% else %}
        <button class="pr-card-btn w-full">
          {% if status == 'upcoming' %}Learn More{% else %}View Recap{% endif %}
        </button>
      {% endif %}
    </div>
  </div>
</article>

{% if card_url != blank %}
</a>
{% endif %}

<style>
  .pr-event-card-link {
    display: block;
    text-decoration: none;
    color: inherit;
  }

  .pr-event-card {
    min-height: 420px;
    display: flex;
    flex-direction: column;
    transition: all 0.3s ease;
    cursor: pointer;
  }

  .pr-event-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
  }

  .pr-event-card > .p-6 {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    flex-grow: 1;
  }

  .pr-card-image {
    transition: transform 0.5s ease;
  }

  .pr-event-card:hover .pr-card-image {
    transform: scale(1.05);
  }

  .pr-card-title {
    color: #000000;
    transition: color 0.3s ease;
  }

  .pr-event-card:hover .pr-card-title {
    color: #D6C2A8;
  }

  .pr-card-description {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .pr-event-badge {
    padding: 0.375rem 0.75rem;
    border-radius: 9999px;
    font-size: 0.875rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    background-color: rgba(214, 194, 168, 0.9);
    color: #1A1A1A;
    box-shadow: 0 1px 2px rgba(0, 0, 0, 0.05);
  }

  .pr-badge-tournament,
  .pr-badge-training,
  .pr-badge-social,
  .pr-badge-featured {
    background-color: rgba(214, 194, 168, 0.9);
    color: #1A1A1A;
    box-shadow: 0 1px 2px rgba(0, 0, 0, 0.05);
  }

  .pr-card-btn {
    padding: 0.5rem 1rem;
    border-radius: 0.5rem;
    font-weight: 500;
    transition: all 0.3s ease;
    background-color: transparent;
    border: 1px solid #D6C2A8;
    color: #D6C2A8;
    cursor: pointer;
  }

  .pr-card-btn:hover {
    background-color: #D6C2A8;
    color: #000000;
  }
</style>
