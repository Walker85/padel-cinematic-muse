{% comment %}
  Padel Ready Event Card Snippet
  Individual event card with hover effects and metaobject support
{% endcomment %}

{% assign card_url = '' %}
{% if handle %}
  {% assign card_url = '/pages/events/' | append: handle %}
{% endif %}

{% if card_url != blank %}
<a href="{{ card_url }}" class="pr-event-card-wrapper" aria-label="View details for {{ title }}">
{% endif %}

<article
  class="pr-event-card"
  data-event-status="{{ status }}"
  style="{% if status == 'past' %}display: none;{% endif %}"
>
  <!-- Image -->
  <div class="aspect-video overflow-hidden">
    {% if image.url %}
      <img
        src="{{ image.url }}"
        alt="{{ title }}"
        class="w-full h-full object-cover pr-card-image"
        loading="lazy"
      />
    {% elsif image %}
      <img
        src="{{ image | img_url: '800x' }}"
        alt="{{ title }}"
        class="w-full h-full object-cover pr-card-image"
        loading="lazy"
      />
    {% else %}
      <img
        src="{{ 'placeholder.svg' | asset_url }}"
        alt="{{ title }}"
        class="w-full h-full object-cover pr-card-image"
        loading="lazy"
      />
    {% endif %}
  </div>

  <!-- Content -->
  <div class="pr-event-content">
    <div>
      <div class="pr-event-badges">
        <span class="pr-event-badge">{{ type }}</span>
        {% if featured %}
          <span class="pr-event-badge">Featured</span>
        {% endif %}
      </div>

      <h3 class="pr-card-title">
        {{ title }}
      </h3>

      <div class="pr-event-date">
        <time datetime="{{ date }}">{{ date }}</time>
      </div>

      <p class="pr-event-location">
        {{ location }}
      </p>

      <p class="pr-card-description">
        {{ description }}
      </p>
    </div>

    <div class="pr-event-action">
      {% if status == 'upcoming' and register_url != blank %}
        <span class="pr-card-btn pr-card-btn-register" onclick="event.preventDefault(); event.stopPropagation(); window.open('{{ register_url }}', '_blank', 'noopener,noreferrer');">
          Register
        </span>
      {% else %}
        <span class="pr-card-btn pr-card-btn-outline">
          {% if status == 'upcoming' %}Learn More{% else %}View Recap{% endif %}
        </span>
      {% endif %}
    </div>
  </div>
</article>

{% if card_url != blank %}
</a>
{% endif %}

<style>
  .pr-event-card-wrapper {
    display: flex;
    flex-direction: column;
    text-decoration: none;
    color: inherit;
    min-height: 420px;
  }

  .pr-event-card {
    background: white;
    border-radius: 0.5rem;
    overflow: hidden;
    box-shadow: 0 1px 2px rgba(0, 0, 0, 0.05);
    transition: all 0.3s ease-out;
    display: flex;
    flex-direction: column;
    flex-grow: 1;
  }

  .pr-event-card-wrapper:hover .pr-event-card {
    transform: translateY(-4px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
  }

  .pr-event-content {
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    flex-grow: 1;
  }

  .pr-card-image {
    transition: transform 0.5s ease;
  }

  .pr-event-card-wrapper:hover .pr-card-image {
    transform: scale(1.05);
  }

  .pr-card-title {
    font-family: 'Mollen', serif;
    font-size: 1.5rem;
    line-height: 2rem;
    margin-bottom: 0.75rem;
    color: #000000;
    transition: color 0.3s ease;
  }

  .pr-event-card-wrapper:hover .pr-card-title {
    color: #D6C2A8;
  }

  .pr-event-badges {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 0.75rem;
    flex-wrap: wrap;
  }

  .pr-event-badge {
    padding: 0.375rem 0.75rem;
    border-radius: 9999px;
    font-size: 0.875rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    background-color: #D6C2A8;
    color: #1A1A1A;
    box-shadow: 0 1px 2px rgba(0, 0, 0, 0.15);
  }

  .pr-event-date,
  .pr-event-location {
    font-family: 'Inter', sans-serif;
    font-size: 0.875rem;
    color: #6b7280;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .pr-event-date {
    margin-bottom: 0.5rem;
  }

  .pr-event-location {
    margin-bottom: 1rem;
  }

  .pr-card-description {
    color: rgba(0, 0, 0, 0.8);
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .pr-event-action {
    margin-top: 1.5rem;
  }

  .pr-card-btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    padding: 0.5rem 1rem;
    border-radius: 0.5rem;
    font-weight: 500;
    transition: all 0.3s ease;
    cursor: pointer;
    text-decoration: none;
  }

  .pr-card-btn-register {
    background-color: #D6C2A8;
    color: #000000;
    border: none;
  }

  .pr-card-btn-register:hover {
    background-color: rgba(214, 194, 168, 0.9);
  }

  .pr-card-btn-outline {
    background-color: transparent;
    border: 1px solid #e5e7eb;
    color: #374151;
  }

  .pr-card-btn-outline:hover {
    background-color: #f9fafb;
  }
</style>
